FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      c;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../input.txt"

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    wall
    {
        type            zeroGradient;
    }

    side
    {
        type            zeroGradient;
    }


    topmid
    {
        type            fixedValue;
        value           uniform 1;
    }

    bottom
    {
        type            binaryReaction;
        value uniform 0;
        S uniform 0;
        RobinD   uniform $diffusivity;
        RobinK   uniform $reactionConstant;
        RobinF   uniform 0;
        Kd uniform 0;
    }

    frontAndBack
    {
        type            empty;
    }
}

